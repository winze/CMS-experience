{%extends 'WinzeFrontendBundle::layout.html.twig' %}
{% block title %}
    {% if locale == 'en' %}
        {{ page.getTitleEn }}
    {% elseif locale == 'fr' %}
        {{ page.getTitle }}
    {% endif %}
{% endblock %}
{% block menu %}
    {% if menus|length > 0 %}
    <ul>
        {% for menu in menus %}
            {% include 'WinzeFrontendBundle:Frontend:menu.line.html.twig' with {'menu':menu} %}
        {% endfor %}
    </ul>
    {% endif %}
{% endblock %}
{% block content %}
    {% if page.getContenus|length > 0 %}
        {% for contenu in page.getContenus %}
            {% if contenu.getArticle and contenu.getIsActif%}
                {%include 'WinzeFrontendBundle:Frontend:page.print.article.html.twig' with {'article':contenu.getArticle}%}
            {% elseif contenu.getDiaporama and contenu.getIsActif %}
                {%include 'WinzeFrontendBundle:Frontend:page.print.diaporama.html.twig' with {'diaporama':contenu.getDiaporama}%}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}